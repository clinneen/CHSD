<p id="notice"><%= notice %></p>

<h1>Invoice Show</h1>

<div class="customerBlock">
  <table>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
    </tr>
    <tr>
      <td><%= "#{@invoice.customer.first_name} #{@invoice.customer.last_name}" %></td>
      <td><%= @invoice.customer.phone %></td>
      <td><%= @invoice.customer.email %></td>
    </tr>
    <tr>
      <th>Address</th>
    </tr>
    <tr>
      <td><%= @invoice.customer.address %></td>
    </tr>
    <tr>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
    </tr>
    <tr>
      <td><%= @invoice.customer.city %></td>
    <td><%= @invoice.customer.state %></td>
      <td><%= @invoice.customer.zip %></td>
    </tr>
</div>

  <div class="miscBlock">
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
      <tr>
        <td><%= "#{@invoice.user.first_name} #{@invoice.user.last_name}" %></td>
        <td><%= @invoice.job_date %></td>
      </tr>
  </div>

  <div class="itemsBlock">
    <tr>
      <th>Description</th>
      <th colspan='3'></th>
    </tr>
    <tr>
      <td><%= @invoice.items %></td>
    </tr>
  </div>
  </table>

<%= link_to 'Edit', edit_invoice_path(@invoice) %>
<%= link_to 'Back', invoices_path %>
