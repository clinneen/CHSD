<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= product.code %></td>
        <td><%= product.description %></td>
        <td></td>
        <td><%= link_to 'Show', product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

